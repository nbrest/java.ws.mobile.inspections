Defaults	env_reset
Defaults	mail_badpass
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"

# Host alias specification

# User alias specification

# Cmnd alias specification

# User privilege specification
root	ALL=(ALL:ALL) ALL

# Members of the admin group may gain root privileges
%admin ALL=(ALL) ALL

# Allow members of group sudo to execute any command
%sudo	ALL=(ALL:ALL) ALL

# See sudoers(5) for more information on "#include" directives:

goku ALL=(ALL) NOPASSWD: /home/goku/programs/kamehouse-shell/bin/kamehouse/httpd-startup.sh
goku ALL=(ALL) NOPASSWD: /home/goku/programs/kamehouse-shell/bin/lin/kamehouse/httpd-status.sh
goku ALL=(ALL) NOPASSWD: /home/goku/programs/kamehouse-shell/bin/lin/kamehouse/httpd-stop.sh
goku ALL=(ALL) NOPASSWD: /home/goku/programs/kamehouse-shell/bin/lin/shutdown/reboot.sh

www-data ALL=(ALL) NOPASSWD: /var/www/programs/kamehouse-shell/bin/common/sudoers/www-data/exec-script.sh

#includedir /etc/sudoers.d
